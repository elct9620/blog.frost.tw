<head>
  <meta charset="utf-8">
  <%
  var title = [];
  if (page.current > 1) title.push(__('page', page.current));
  if (page.title) title.push(page.title);
  if (page.category) title.push(page.category);
  if (page.tag) title.push(page.tag);
  if (page.archive){
  if (page.year) title.push(__('archive_b', page.year + (page.month ? '/' + page.month : '')));
  else title.push(__('archive_a'));
  }
  if (is_home() || page.tag) {
    title.push(config.title + ' - ' + config.subtitle);
  } else {
    title.push(config.title);
  }
  %>
  <title><%= title.join(' | ') %></title>
  <meta name="theme-color" content="#EFEFEF">

  <% if (config.author){ %><meta name="author" content="<%= config.author %>"><% } %>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <%- partial('open_graph') %>
  <meta property="fb:pages" content="180666522388" />
  <%- partial('json-ld') %>


  <link rel="canonical" href="<%= config.url + '/' + page.canonical_path.replace('index.html', '') %>" />
  <link href="<%- config.root %>icon-512.png" rel="icon">
  <link rel="alternate" href="<% if (theme.rss){ %><%- theme.rss %><% } else { %><%- config.root %>feed.xml<% } %>" title="<%= config.title %>" type="application/rss+xml">
  <!--[if lt IE 9]><script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

  <link rel="stylesheet" href="<%- config.root %>css/style.css" media="screen" type="text/css">
  <script async src="<%- config.root %>js/turbolinks.js"></script>
  <% if (page.prev){ %>
    <link href="<%- config.url + '/' + page.prev_link %>" rel="prev" />
  <% } %>
  <% if (page.next){ %>
    <link href="<%- config.url + '/' + page.next_link %>" rel="next">
  <% } %>
</head>
