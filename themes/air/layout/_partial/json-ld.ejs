<script type="application/ld+json">
<% if(is_home()) { %>
{
    "@context": "http://schema.org",
    "@type": "Blog",
    "name": "<%= config.title %>",
    "url": "<%= config.url %>",
    "image": "<%= config.cover %>",
    "description": "<%= config.description %>",
    "sameAs": [
      "https://www.facebook.com/frost.tw/"
    ]
}
<% } else if(is_post() || is_amp()) { %>
{
  "@context":"http://schema.org",
  "@type":"LiveBlogPosting",
  "url":"<%= page.permalink %>",
  "coverageStartTime":"<%= page.date.toDate().toISOString() %>",
  "coverageEndTime":"<%= page.updated.toDate().toISOString() %>",
  "datePublished": "<%= page.date.toDate().toISOString() %>",
  "dateModified": "<%= page.updated.toDate().toISOString() %>",
  "headline":"<%= page.title %>",
  "description":"<%- strip_html(page.excerpt).replace(/\"/g, "\\\"") %>",
  "image": {
    "@type": "ImageObject",
    "url": "<%= thumbnail(page) || config.cover %>",
    "width": 512,
    "height": 512
  },
  "publisher": {
    "@type": "Person",
    "name": "<%= config.author %>",
    "logo:" {
      "@type": "ImageObject",
      "<%= config.logo_wide %>",
      "width": 512,
      "height": 144
    }
  },
  "author": {
    "@type": "Person",
    "name": "<%= config.author %>"
  }
  "liveBlogUpdate":[
    <% site.posts.slice(0, config.per_page).each(function(item, index) { %>
    {
      "@type":"BlogPosting",
      "headline":"<%= item.title %>",
      "url":"<%= item.permalink %>",
      "datePublished":"<%= item.date.toDate().toISOString() %>",
      "articleBody": "<%- strip_html(item.excerpt).replace(/\"/g, "\\\"") %>",
      "image": "<%= thumbnail(item) || config.cover %>"
    }<% if(index < config.per_page - 1) { %>,<% } %>
    <% }) %>
  ]
}
<% } %>
</script>
