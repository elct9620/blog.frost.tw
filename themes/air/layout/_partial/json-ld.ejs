<script type="application/ld+json">
<% if(is_home()) { %>
{
    "@context": "http://schema.org",
    "@type": "Blog",
    "name": "<%= config.title %>",
    "url": "<%= config.url %>",
    "image": "<%= config.cover %>",
    "description": "<%= config.description %>",
    "sameAs": [
      "https://www.facebook.com/frost.tw/"
    ]
}
<% } else if(is_post() || is_amp()) { %>
{
  "@context":"http://schema.org",
  "@type":"Article",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "<%= page.permalink %>"
  },
  "headline":"<%= page.title %>",
  "image": [
    <% if(thumbnail(page)){ %>
    "<%= thumbnail(page) %>",
    <% } %>
    "<%= config.cover %>"
  ],
  "datePublished": "<%= page.date.toDate().toISOString() %>",
  "dateModified": "<%= page.updated.toDate().toISOString() %>",
  "description":"<%- strip_html(page.excerpt).replace(/\"/g, "\\\"").replace(/\n/g, "") %>",
  "author": {
    "@type": "Person",
    "name": "<%= config.author %>"
  },
  "publisher": {
    "@type": "Organization",
    "name": "<%= config.author %>",
    "logo": {
      "@type": "ImageObject",
      "url": "http://blog.forst.tw/logo-wide.png"
    }
  }
}
<% } %>
</script>
