<script type="application/ld+json">
<% if(is_home()) { %>
{
    "@context": "http://schema.org",
    "@type": "Blog",
    "name": "<%= config.title %>",
    "url": "<%= config.url %>",
    "image": "<%= config.cover %>",
    "description": "<%= config.description %>",
    "sameAs": [
      "https://www.facebook.com/frost.tw/"
    ]
}
<% } else if(is_post() || is_amp()) { %>
{
  "@context":"http://schema.org",
  "@type":"Article",
  "mainEntityOfPage": "<%= page.permalink %>",
  "url":"<%= page.permalink %>",
  "datePublished": "<%= page.date.toDate().toISOString() %>",
  "dateModified": "<%= page.updated.toDate().toISOString() %>",
  "headline":"<%= page.title %>",
  "description":"<%- strip_html(page.excerpt).replace(/\"/g, "\\\"") %>",
  "image": {
    "@type": "ImageObject",
    "url": "<%= thumbnail(page) || config.cover %>",
    "width": 700,
    "height": 700
  },
  "publisher": {
    "@type": "Organization",
    "name": "<%= config.author %>",
    "logo": {
      "@type": "ImageObject",
      "url": "http://blog.forst.tw/logo-wide.png",
      "width": 600,
      "height": 60
    }
  },
  "author": {
    "@type": "Person",
    "name": "<%= config.author %>"
  }
}
<% } %>
</script>
