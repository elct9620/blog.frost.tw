<script type="application/ld+json">
{
    "@context": "http://schema.org",
    "@type": "Blog",
    "name": "<%= config.title %>",
    "url": "<%= config.url %>",
    "image": "<%= config.cover %>",
    "description": "<%= config.description %>",
    "sameAs": [
      "https://www.facebook.com/frost.tw/"
    ]
}
</script>
<script type="application/ld+json">
{
    "@context": "http://schema.org",
    "@type": "Person",
    "name": "<%= config.author %>",
    "url": "<%= config.url %>",
    "sameAs": [
      "https://www.facebook.com/elct9620",
      "https://www.instagram.com/elct9620/",
      "https://twitter.com/elct9620",
      "https://plus.google.com/+%E8%92%BC%E6%99%82%E5%BC%A6%E4%B9%9F-plus",
      "https://www.linkedin.com/in/elct9620"
    ]
}
</script>
<% if(is_home()) { %>
<script type="application/ld+json">
{
  "@context":"http://schema.org",
  "@type":"ItemList",
  "itemListElement":[
  <% page.posts.each(function(item, index) { %>
    {
      "@type":"ListItem",
      "position": <%- index + 1 %>,
      "url":"<%- config.url %><%- item.path %>"
    }<%- (config.per_page == index + 1) ? '' : ',' %>
  <% }) %>
  ]
}
</script>
<% } %>
<% if(is_post() || is_amp()) { %>
<script type="application/ld+json">
{
  "@context":"http://schema.org",
  "@type":"Article",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "<%= page.permalink %>"
  },
  "headline":"<%= page.title %>",
  "image": [
    <% if(thumbnail(page)){ %>
    "<%= thumbnail(page) %>",
    <% } %>
    "<%= config.cover %>"
  ],
  "datePublished": "<%= page.date.toDate().toISOString() %>",
  "dateModified": "<%= page.updated.toDate().toISOString() %>",
  "description":"<%- strip_html(page.excerpt).replace(/\"/g, "\\\"").replace(/\n/g, "") %>",
  "author": {
    "@type": "Person",
    "name": "<%= config.author %>"
  },
  "publisher": {
    "@type": "Organization",
    "name": "<%= config.author %>",
    "logo": {
      "@type": "ImageObject",
      "url": "http://blog.forst.tw/logo-wide.png"
    }
  }
}
</script>
<% } %>
