
<meta property="og:site_name" content="<%= config.title %>"/>

<% if (page.title){ %>
<meta property="og:title" content="<%= page.title %>"/>
<% } else { %>
<meta property="og:title" content="<%= config.title %>"/>
<% } %>
<meta property="og:url" content="<%= page.permalink || config.url %>"/>

<% if (page.description){ %>
<meta name="og:description" content="<%= page.description %>">
<% } else if (page.excerpt){ %>
<meta name="og:description" content="<%= strip_html(page.excerpt).replace(/^\s*/, '').replace(/\s*$/, '') %>">
<% } else if (page.content){ %>
<meta name="og:description" content="<%= strip_html(page.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 150) %>">
<% } else if (config.description){ %>
<meta name="og:description" content="<%= config.description %>">
<% } %>

<% if(page.cover) { %>
<meta property="og:image" content="<%= page.cover %>" />
<% } else { %>
<meta property="og:image" content="<%= config.cover %>"/>
<% } %>

<% if(config.app_id) { %>
<meta property="fb:app_id" content="<%= config.app_id %>"/>
<% } %>
